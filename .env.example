# x-log Environment Configuration
# Copy this file to .env and adjust values for your local development environment

# Node Environment
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgres://xlog:xlogpass@localhost:5432/xlog

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Instance Configuration
INSTANCE_DOMAIN=localhost
INSTANCE_NAME=x-log
ADMIN_EMAIL=admin@example.com
OPEN_REGISTRATIONS=false

# SMTP Configuration (optional)
SMTP_URL=

# Session Secret (generate a random string at least 32 characters long)
# For production, use: openssl rand -base64 32
SESSION_SECRET=change-this-to-a-random-secret-at-least-32-characters-long-for-production

# Federation
FEDERATION_ENABLED=true

# API Port
PORT=8080

# Frontend API URL
NEXT_PUBLIC_API_URL=http://localhost:8080
